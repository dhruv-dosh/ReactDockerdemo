pipeline {
    agent any

    environment {
        IMAGE_NAME = "hello-react"
        CONTAINER_NAME = "hello-react-container"
        PORT = "8081"
    }

    stages {
        stage("Clone Code") {
            steps {
                echo "üîÅ Cloning the code from GitHub..."
                git branch: "main", url: "https://github.com/dhruv-dosh/ReactDockerdemo.git"
            }
        }

        stage("Clean Old Containers & Images") {
            steps {
                echo "üßπ Cleaning up old containers and images..."
                bat '''
                echo Listing containers...
                docker ps -a

                echo Removing running container if exists...
                docker stop %CONTAINER_NAME% 2>nul || echo "No running container"
                docker rm -f %CONTAINER_NAME% 2>nul || echo "No container to remove"

                echo Removing old image if exists...
                docker rmi -f %IMAGE_NAME%:latest 2>nul || echo "No image to remove"

                echo ‚úÖ Cleanup completed successfully.
                exit /b 0
                '''
            }
        }

        stage("Build Docker Image") {
            steps {
                echo "‚öôÔ∏è Building Docker image..."
                bat '''
                cd reactapp
                docker build -t %IMAGE_NAME%:latest .
                '''
            }
        }

        stage("Deploy Container") {
            steps {
                echo "üöÄ Running Docker container..."
                bat '''
                docker run -d --name %CONTAINER_NAME% -p %PORT%:80 %IMAGE_NAME%:latest
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful! Visit http://localhost:${PORT}"
        }
        failure {
            echo "‚ùå Deployment failed. Check Jenkins logs for details."
        }
    }
}
